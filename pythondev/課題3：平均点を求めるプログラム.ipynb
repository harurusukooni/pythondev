    "i=0 #点数入力回数\n",
    "total=0 #合計点数計算用\n",
    "score=0 #入力された点数\n",
    "\n",
    "while score >= 0:\n",
    " score=int(input(\"点数を入力してください：\"))\n",
    " print(\"点数を入力してください：\" ,score, ) \n",
    " total += score\n",
    " i += 1\n",
    "  \n",
    "score=round((total+1)/(i-1),1)\n",
    "i=i-1\n",
    "\n",
    "print(\"\",i,\"人のテストの平均点は\",score,\"点です。\")"
